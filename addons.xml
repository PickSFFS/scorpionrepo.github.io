<?xml version="1.0" encoding="UTF-8"?>
<addons>
<addon id="plugin.program.scorpion" name="Scorpion Wizard" version="1.9.5" provider-name="Pick">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>executable</provides>
  </extension>
  <extension point="xbmc.service" library="startup.py" start="startup" />
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Scorpion Wizard</summary>
    <description lang="en">Scorpion Wizard allows you to get all the van candy your punk ass can handle.</description>
    <platform>all</platform>
  </extension>
</addon>

<addon id="repository.scorpion" name="Scorpion Repository" version="3.0" provider-name="Pick">
  <requires>
    <import addon="xbmc.addon" version="12.0.0"/>
  </requires>
	<extension point="xbmc.addon.repository">
		<dir>
			<info compressed="false">https://sffscorpion.com/addons/addons.xml</info>
			<checksum>https://sffscorpion.com/addons/addons.xml.md5</checksum>
			<datadir zip="true">https://sffscorpion.com/addons</datadir>
		</dir>
		<dir>
			<info compressed="false">https://raw.githubusercontent.com/jsergio123/zips/master/addons.xml</info>
			<checksum>https://raw.githubusercontent.com/jsergio123/zips/master/addons.xml.md5</checksum>
			<datadir zip="true">https://raw.githubusercontent.com/jsergio123/zips/master/</datadir>
		</dir>
		<dir>
            <info compressed="false">https://raw.githubusercontent.com/teamuniversal/scrapers/master/_modules4all/zips/addons.xml</info>
            <checksum>https://raw.githubusercontent.com/teamuniversal/scrapers/master/_modules4all/zips/addons.xml.md5</checksum>
            <datadir zip="true">https://raw.githubusercontent.com/teamuniversal/scrapers/master/_modules4all/zips/</datadir>
            <hashes>false</hashes>
		</dir>
	</extension>
    <extension point="xbmc.addon.metadata">
		<summary lang="en">Scorpion: The very best in van candy.</summary>
		<description>Freshness Guaranteed</description>
        <disclaimer lang="en">The author of this addon does not give a f--ck what you do.</disclaimer>
		<platform>all</platform>
		<assets>
			<icon>icon.png</icon>
			<fanart>fanart.jpg</fanart>
		</assets>
    </extension>
</addon>
</addons>
